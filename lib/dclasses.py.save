"""Media dataclasses module."""

from dataclasses import dataclass
from lib.enums import MediaType


@dataclass
class RequestResponse:
    """Dataclass to store the response of a request."""
    data: dict
    status: int
    cookies: dict


@dataclass
class Episode:
    """Episode class for movie data."""
    season: int = None
    episode: int = None
    title: str = None
    db_id: str = None


@dataclass
class Media:
    """Metadata class for movie data."""
    title: str = None
    year: int = None
    poster: str = None
    db_id: str = None
    type: MediaType = None
