class LogLevels(Enum):
    """Log levels for the logger."""
    DEBUG = 1
    MSG = 2
    INFO = 2
    WARNING = 3
    ERROR = 4


class LogColors(Enum):
    """Log colors for the logger."""
    DEBUG = '\033[96m'
    MSG = '\033[92m'
    INFO = '\033[37m'
    WARNING = '\033[93m'
    ERROR = '\033[91m'
    ENDC = '\033[0m'

class MediaType(Enum):
    """Media type class for movie data."""
    MOVIE = "movie"
    SHOW = "tv"
